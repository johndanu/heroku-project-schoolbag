<!DOCTYPE html>
<html lang="en">

<head>
  <title>Start Learning</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"> -->
  <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script> -->
  <%- include('sections/links')%>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
  <%- include('sections/navBar',{user:user,notification:notification})%>

  <div style="height:90px;"></div>
  <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:black">
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" href="/subject" ><i class="fa fa-book"></i> Change subject</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/tutor/<%= units[0].subjectid %>" ><i class="fa fa-user"></i> Change Tutor</a>
    </li>
  </ul>
</nav>
  <div class="card m-3 btn-group">

  </div>
  <div class="container-fluid bg-1" onload="$('.unit').hide()">
    <div class="row p-2">

        <ul class="list-group w-100">
          <%if (units){%>
          <li class="list-group-item list-group-item-success pl-1"> Unit Name </li>
          <%units.forEach(function(units){%>
            <h3><a href="/syllabus/<%= units._id %>" onclick="$('.unit').not('#<%= units._id %>').hide(300);$('#<%= units._id %>').toggle(500)"
            class="list-group-item list-group-item-light"><%= units.title %></a></h3>
          <%})%>
          <%}%>
        </ul>

    </div>
  </div>
</body>

</html>
